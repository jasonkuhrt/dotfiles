{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$defs": {
    "BookmarksConfig": {
      "type": "object",
      "required": [
        "targets",
        "base"
      ],
      "properties": {
        "targets": {
          "type": "object",
          "required": [],
          "properties": {},
          "additionalProperties": {
            "type": "object",
            "required": [],
            "properties": {},
            "additionalProperties": {
              "$ref": "#/$defs/TargetProfile"
            }
          }
        },
        "base": {
          "$ref": "#/$defs/BookmarkTree"
        },
        "profiles": {
          "type": "object",
          "required": [],
          "properties": {},
          "additionalProperties": {
            "$ref": "#/$defs/BookmarkTree"
          }
        }
      },
      "additionalProperties": false
    },
    "TargetProfile": {
      "type": "object",
      "required": [
        "path"
      ],
      "properties": {
        "path": {
          "type": "string"
        },
        "enabled": {
          "type": "boolean"
        }
      },
      "additionalProperties": false
    },
    "BookmarkTree": {
      "type": "object",
      "required": [],
      "properties": {
        "favorites_bar": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/BookmarkNode"
          }
        },
        "other": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/BookmarkNode"
          }
        },
        "reading_list": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/BookmarkNode"
          }
        },
        "mobile": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/BookmarkNode"
          }
        }
      },
      "additionalProperties": false
    },
    "BookmarkNode": {
      "anyOf": [
        {
          "$ref": "#/$defs/BookmarkLeaf"
        },
        {
          "$ref": "#/$defs/BookmarkFolder"
        }
      ]
    },
    "BookmarkLeaf": {
      "type": "object",
      "required": [
        "name",
        "url"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "url": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "BookmarkFolder": {
      "type": "object",
      "required": [
        "name",
        "children"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "children": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/BookmarkNode"
          }
        }
      },
      "additionalProperties": false
    }
  },
  "$ref": "#/$defs/BookmarksConfig"
}
