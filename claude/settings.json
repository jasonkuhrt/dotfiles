{
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash",
      "Edit",
      "MultiEdit",
      "Write",
      "Read(~/**)",
      "Read(//tmp/**)",
      "WebFetch",
      "WebSearch",
      "Skill(code-review:*)",
      "Skill(hookify:*)",
      "Skill(superpowers:*)",
      "Skill(superpowers-developing-for-claude-code:*)",
      "mcp__serena",
      "mcp__claude-in-chrome",
      "mcp__effect-docs",
      "mcp__ref",
      "Skill(cc-writing-skills)"
    ],
    "deny": [],
    "defaultMode": "acceptEdits",
    "additionalDirectories": ["/Users/jasonkuhrt"]
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/scripts/session-start-resume-info.sh"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/scripts/settings-json-guard.sh"
          }
        ]
      }
    ],
    "PermissionRequest": [
      {
        "matcher": "Skill",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/scripts/approve-user-skills.sh"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "code-review@claude-plugins-official": true,
    "hookify@claude-plugins-official": true,
    "typescript-lsp@claude-plugins-official": true,
    "superpowers@superpowers-marketplace": true,
    "superpowers-developing-for-claude-code@superpowers-marketplace": true,
    "claude-md-management@claude-plugins-official": true
  },
  "extraKnownMarketplaces": {},
  "alwaysThinkingEnabled": true,
  "autoUpdatesChannel": "latest"
}
