# Fish secrets - machine-specific tokens and credentials
# Copy to config.secrets.fish and fill in your values
# This file is sourced by config.fish

# GitHub token (uses gh CLI auth - adds ~125ms to shell startup)
# TODO: find out what actually requires this env var vs using gh auth directly
export GITHUB_TOKEN=$(gh auth token)

# NPM tokens for publishing
# TODO: find out if both are needed or if one is redundant
export NPM_TOKEN='npm_xxxx'
export NPM_PUBLISH_TOKEN='npm_xxxx'
