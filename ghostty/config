cursor-opacity          = 0.3


#
# Security
#

clipboard-paste-protection = false

#
# Notifications & Bell
#
# OSC 777 notifications â†’ macOS Notification Center (used by Claude Code hooks)
# Bell features: dock bounce + badge for attention when unfocused
