  "comment:heading:1": {
    "prefix": "0ch1",
    "body": [
      "//",
      "//",
      "//",
      "//",
      "//",
      "// ${1:HEADING}",
      "//",
      "// ▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄",
      "//",
      "//",
      "//",
      "$0"
    ],
    "description": "File header comment."
  },
  "comment:heading:2": {
    "prefix": "0ch2",
    "body": [
      "",
      "//",
      "//",
      "//",
      "//",
      "// ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━ • ${1:HEADING}",
      "//",
      "//",
      "$0"
    ],
    "description": "Major section heading comment."
  },
  "comment:heading:3": {
    "prefix": "0ch3",
    "body": [
      "",
      "//",
      "//",
      "//",
      "// ━━━━━━━━━━━━━━ • ${1:HEADING}",
      "//",
      "//",
      "$0"
    ],
    "description": "Minor section heading comment."
  },
  "comment:heading:4": {
    // I want / prefix but that is buggy
    // @see https://github.com/zed-industries/zed/issues/31748
    "prefix": "0ch4",
    "body": ["", "//", "// ━━ ${1:Heading}", "//", ""],
    "description": "Comment for Sub-Section heading."
  },
  "comment:heading:5": {
    "prefix": "0ch5",
    "body": ["// ━ ${1:HEADING}$0"],
    "description": "Comment for Sub-Sub-Section heading."
  },

