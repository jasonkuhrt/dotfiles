    ]
  },
  "text:bar:2": {
    "prefix": "0sb",
    "description": "A medium weight 80 col bar.",
    "body": [
      "━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━"
