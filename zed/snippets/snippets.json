  // ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━ • Comments
  //
  //
  //

  "eslint:2:ignore:next-line": {
    "prefix": "0cesignore-line",
    "body": ["// eslint-disable-next-line$0"],
    "description": "Force ESLint to ignore the next line"
  },
  "eslint:1:ignore:file": {
    "prefix": "0cesignore-file",
    "body": ["/* eslint-disable */\n$0"],
    "description": "Force ESLint to ignore the whole module (must be top of file)."
  },
  "dprint:ignore:next-line": {
    "prefix": "0cdpignore",
    "body": ["// dprint-ignore$0"],
    "description": "Prevent dprint from formatting the block."
  },
  //
  //
  //
  //
  // ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━ • Functions
  //
  //
  //
  "fn:arrow": {
    "prefix": "0>",
    "body": ["($1) => {$0}"],
    "description": "A function inline."
  },
  "fn:arrow:async": {
    "prefix": "0>a",
    "body": ["async ($1) => {$0}"],
    "description": "A function inline (async)."
  },
  "fn": {
    "prefix": "0f",
    "body": ["const $1 = ($2) => {$0}"],
    "description": "A function."
  },
  "fn:async": {
    "prefix": "0fa",
    "body": ["const $1 = async ($2) => {$0}"],
    "description": "A function (async)."
  },
  //
  //
  //
  //
  // ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━ • Testing
  //
  //
  //
  "vite test": {
    "prefix": "0vt",
    "body": ["test('$1', () => {$0})"],
    "description": "A test."
  },
  "vite test async": {
    "prefix": "0va",
    "body": ["test('$1', async () => {$0})"],
    "description": "An async test."
  },
  "vite describe": {
    "prefix": "0vd",
    "body": ["describe('$1', () => {$0})"],
    "description": "A test group (describe)."
  },
  //
  //
  //
  //
  // ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━ • Types
  //
  //
  //
  "ts:interface": {
    "prefix": "0tsi",
    "body": ["", "export interface $1 {\n\t$0\n}", ""],
    "description": "An interface."
  },
  "ts:union": {
    "prefix": "0tsu",
    "body": ["", "export type $1 =\n\t| $0", ""],
    "description": "A union type."
  },
  "ts:2:ignore-expected:next-line": {
    "prefix": "0ctsignore-expect",
    "body": ["// @ts-expect-error$0"],
    "description": "Ignore a TS error on the next line (or error if none)."
  },
  "ts:1:ignore:next-line": {
    "prefix": "0ctsignore",
    "body": ["// @ts-ignore$0"],
    "description": "Ignore a TS error on the next line (if there is one)."
  },

  //
  //
  //
  //
  // ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━ • Importing
  //
  //

  "import:named-exports": {
    "prefix": "0im",
    "description": "Import named exports.",
    "body": ["import { $1 } from '$2'$0"]
  },
  "import:namespaced": {
    "prefix": "0imns",
    "description": "Import as namespace.",
    "body": ["import * as $1 from '$2'$0"]
  },
  "import:export": {
    "prefix": "0exp",
    "description": "Import to re-export.",
    "body": ["export * from '$1'$0"]
  },
  "import:export:namespaced": {
    "prefix": "0expns",
    "description": "Import to re-exported namespace.",
    "body": ["export * as $1 from '$2'$0"]
  },

  //
  //
  //
  //
  // ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━ • Loops
  //
  //

  "loop:for:of": {
    "prefix": "0forof",
    "description": "Loop for-of.",
    "body": ["for (const $1 of $2) {\n\t$0\n}"]
  },

  // Avoid dealing with trailling commas above :(
  "____": { "body": "" }
}
